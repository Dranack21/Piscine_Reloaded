### COMPIL ######################################################################

CC = cc
CFLAGS =  -Wall -Wextra -Werror 

### SRCS #######################################################################

SRCS = ft_display_file.c
OBJS = $(SRCS:.c=.o)

### REGLES #####################################################################

NAME = ft_display_file

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

all: $(NAME)

clean: 
	rm -f $(OBJS)

fclean:
	 rm -f $(NAME) $(OBJS)

re: fclean  all
	

.PHONY: all clean fclean re